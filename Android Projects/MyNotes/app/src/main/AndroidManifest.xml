<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rakesh.mynotes" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/notes"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.rakesh.mynotes.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.rakesh.mynotes.EditYourNote"
            android:label="@string/title_activity_edit_your_note"
            android:parentActivityName="com.rakesh.mynotes.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.rakesh.mynotes.MainActivity" />
        </activity>
    </application>

</manifest>
